{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noConstantMathMinMaxClamp": "error",
        "noUnusedImports": "error",
        "noUndeclaredDependencies": "error"
      },
      "performance": {
        "noReExportAll": "error",
        "noBarrelFile": "error",
        "noAccumulatingSpread": "error"
      },
      "complexity": {
        "noForEach": "off",
        "useSimplifiedLogicExpression": "error",
        "useDateNow": "error",
        "noUselessStringConcat": "error"
      },
      "style": {
        "noShoutyConstants": "error",
        "noDefaultExport": "error",
        "noNegationElse": "error",
        "useCollapsedElseIf": "error"
      },
      "suspicious": {
        "useAwait": "error",
        "noSkippedTests": "warn",
        "useErrorMessage": "error"
      },
      "nursery": {
        "noDuplicateJsonKeys": "error",
        "noDuplicateElseIf": "error"
      }
    }
  },
  "files": {
    "ignore": [".github/CODEOWNERS", "node_modules"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "json": {
    "formatter": {
      "enabled": true,
      "trailingCommas": "none",
      "indentStyle": "space",
      "lineEnding": "lf"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowTrailingCommas": false,
      "allowComments": false
    }
  },

  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "quoteProperties": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false
    },
    "linter": {
      "enabled": true
    }
  }
}
